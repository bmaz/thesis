journal = {Journal of Legal Analysis},
number = {1},
pages = {1--64},
title = {{Subsidizing The Press}},
url = {http://jla.oxfordjournals.org/content/3/1/1.abstract},
volume = {3},
year = {2011}
}
@article{AtheyCalvanoGans2018,
